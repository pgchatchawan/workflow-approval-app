{
    "swagger": "2.0",
    "info": {
        "description": "IT03 document approval workflow (Pending/Approved/Rejected) with reason.",
        "title": "Workflow Approval API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/api/documents": {
            "get": {
                "description": "Get documents (optional filter by status)",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Documents"
                ],
                "summary": "List documents",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Filter status: PENDING | APPROVED | REJECTED",
                        "name": "status",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.DocumentListResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/api/documents/approval": {
            "post": {
                "description": "Approve only documents with status PENDING (cannot approve twice)",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Documents"
                ],
                "summary": "Approve documents (bulk)",
                "parameters": [
                    {
                        "description": "Approval payload",
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.BulkDecisionRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.BulkApprovalResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/api/documents/rejection": {
            "post": {
                "description": "Reject only documents with status PENDING",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Documents"
                ],
                "summary": "Reject documents (bulk)",
                "parameters": [
                    {
                        "description": "Rejection payload",
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.BulkDecisionRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.BulkRejectionResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/api/documents/seed": {
            "post": {
                "description": "Insert mock documents for testing (use ?reset=true to clear old data)",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Documents"
                ],
                "summary": "Seed mock documents (dev only)",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Reset collection before seed (true/false)",
                        "name": "reset",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "models.BulkApprovalResponse": {
            "type": "object",
            "properties": {
                "approved": {
                    "type": "integer",
                    "example": 2
                },
                "message": {
                    "type": "string",
                    "example": "approved"
                },
                "requested": {
                    "type": "integer",
                    "example": 2
                },
                "statusCode": {
                    "type": "integer",
                    "example": 200
                }
            }
        },
        "models.BulkDecisionRequest": {
            "type": "object",
            "properties": {
                "document_ids": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "example": [
                        "6992a066b7e55e55d9d1dd8f"
                    ]
                },
                "reason": {
                    "type": "string",
                    "example": "Approved by IT manager"
                }
            }
        },
        "models.BulkRejectionResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "example": "rejected"
                },
                "rejected": {
                    "type": "integer",
                    "example": 2
                },
                "requested": {
                    "type": "integer",
                    "example": 2
                },
                "statusCode": {
                    "type": "integer",
                    "example": 200
                }
            }
        },
        "models.DocumentItemDTO": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string",
                    "example": "2026-02-16T04:58:52Z"
                },
                "doc_no": {
                    "type": "string",
                    "example": "IT03-0001"
                },
                "id": {
                    "type": "string",
                    "example": "6992a40c3fb0b6dcb1857948"
                },
                "reason": {
                    "type": "string",
                    "example": "Approved by IT manager"
                },
                "status": {
                    "allOf": [
                        {
                            "$ref": "#/definitions/models.DocumentStatus"
                        }
                    ],
                    "example": "PENDING"
                },
                "title": {
                    "type": "string",
                    "example": "Access Request"
                },
                "updated_at": {
                    "type": "string",
                    "example": "2026-02-16T04:58:52Z"
                }
            }
        },
        "models.DocumentListResponse": {
            "type": "object",
            "properties": {
                "data": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/models.DocumentItemDTO"
                    }
                },
                "statusCode": {
                    "type": "integer",
                    "example": 200
                }
            }
        },
        "models.DocumentStatus": {
            "type": "string",
            "enum": [
                "PENDING",
                "APPROVED",
                "REJECTED"
            ],
            "x-enum-varnames": [
                "StatusPending",
                "StatusApproved",
                "StatusRejected"
            ]
        }
    }
}